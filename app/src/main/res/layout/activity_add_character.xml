<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCharacterActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/character_ava" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="Имя персонажа"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textViewLvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="4dp"
        android:text="Lvl:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextName"
        app:layout_constraintEnd_toStartOf="@+id/textViewActualLvl"
        app:layout_constraintStart_toEndOf="@+id/editTextName"
        app:layout_constraintTop_toTopOf="@+id/editTextName" />

    <TextView
        android:id="@+id/textViewActualLvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewLvl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewLvl"
        app:layout_constraintTop_toTopOf="@+id/textViewLvl" />

    <TextView
        android:id="@+id/textViewRace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Раса : "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textViewClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Класс : "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRace" />

    <Spinner
        android:id="@+id/spinnerRace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:entries="@array/AllRace"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewRace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewRace"
        app:layout_constraintTop_toTopOf="@+id/textViewRace" />

    <Spinner
        android:id="@+id/spinnerClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="140dp"
        android:entries="@array/AllClass"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewClass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewClass"
        app:layout_constraintTop_toTopOf="@+id/textViewClass" />

    <Button
        android:id="@+id/buttonCreateCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickCreateCharacter"
        android:text="Создать персонажа"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroupAttributesGenerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewClass">



        <RadioButton4d6
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4d6" />

        <RadioButtonStandart
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Standart" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/linearLayoutDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayoutValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupAttributesGenerate"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textViewStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сила:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewDexterity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ловкость"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewConstitution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Телосложение"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewIntelligence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Интелект"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewWisdom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мудрость"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewCharisma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Харизма"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutDesc"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutDesc"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutDesc">

        <TextView
            android:id="@+id/textViewStrengthValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="сил" />

        <TextView
            android:id="@+id/textViewDexterityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="лов" />

        <TextView
            android:id="@+id/textViewConstitutionValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="тел" />

        <TextView
            android:id="@+id/textViewIntelligenceValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="инт" />

        <TextView
            android:id="@+id/textViewWisdomValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="мдр" />

        <TextView
            android:id="@+id/textViewCharismaValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="хр" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutSpas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutValue"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutValue">

        <TextView
            android:id="@+id/textViewStrengthSpas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="спас сил"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewDexteritySpas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cпас лов"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewConstitutionSpas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="спас тел"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewIntelligenceSpas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="спас инт"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewWisdomSpas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="спас мдр"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewCharismaSpas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="спас хр"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButtonStrDown"
        android:layout_width="61dp"
        android:layout_height="55dp"
        android:layout_marginStart="5dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutValue"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutValue"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonStrUp"
        app:srcCompat="@drawable/icon_down" />

    <ImageButton
        android:id="@+id/imageButtonStrUp"
        android:layout_width="61dp"
        android:layout_height="55dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="26dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonStrDown"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutValue"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutValue"
        app:srcCompat="@drawable/icon_up" />

    <Button
        android:id="@+id/buttonRandomGenarate"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:text="Generate"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupAttributesGenerate" />

</androidx.constraintlayout.widget.ConstraintLayout>